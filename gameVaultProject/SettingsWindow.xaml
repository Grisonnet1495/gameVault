<Window x:Class="gameVaultProject.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gameVaultProject"
        mc:Ignorable="d"
        Title="Settings"
        Height="530"
        Width="500"
        Background="#262626"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20, 20, 20, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="70"/>
                <RowDefinition Height="Auto" MinHeight="70"/>
                <RowDefinition Height="Auto" MinHeight="70"/>
                <RowDefinition Height="Auto" MinHeight="70"/>
                <RowDefinition Height="Auto" MinHeight="100"/>
            </Grid.RowDefinitions>
        
            <Label Grid.Row="0" Grid.Column="0" Content="Change username :" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="MyPseudo" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#323232" Foreground="White"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Choose backup folder :" VerticalAlignment="Center" Foreground="White"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Choose folder" Width="100" Height="25" Style="{StaticResource SettingsButtonStyle}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Backup :" VerticalAlignment="Center" Foreground="White"/>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Create backup" Width="100" Height="25" Style="{StaticResource SettingsButtonStyle}"/>
                <Button Grid.Column="1" Content="Restore a backup" Width="120" Height="25" Style="{StaticResource SettingsButtonStyle}"/>
            </Grid>
            
            <Label Grid.Row="3" Grid.Column="0" Content="Export a game :" VerticalAlignment="Center" Foreground="White"/>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Row="0" Grid.Column="0" Width="100" Height="20"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Export" Width="80" Height="25" Style="{StaticResource SettingsButtonStyle}"/>
                <!-- Note : Change button text to confirm the export -->
            </Grid>


            <Label Grid.Row="4" Grid.Column="0" Content="Delete all app data :" VerticalAlignment="Center" Foreground="White"/>
            <StackPanel Grid.Row="4" Grid.Column="1" VerticalAlignment="Center">
                <Button Content="Delete" Width="100" Height="25" Background="#A80000" Foreground="White" Style="{StaticResource SettingsButtonStyle}"/>
                <CheckBox Cursor="Hand">
                    <TextBlock Text="I accept that I cannot recover my data after this" TextWrapping="Wrap" Foreground="White"/>
                </CheckBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0, 20, 0, 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Save" Width="100" Height="25" Click="SaveButton_Click" Background="#0070C0" Foreground="White" Style="{StaticResource SettingsButtonStyle}" Cursor="Hand"/>
            <Button Grid.Column="1" Content="Cancel" Width="100" Height="25" Click="CancelButton_Click" Style="{StaticResource SettingsButtonStyle}" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
