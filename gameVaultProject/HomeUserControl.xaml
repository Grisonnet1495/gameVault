<UserControl x:Class="gameVaultProject.HomeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gameVaultProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel Margin="40">
                <Label x:Name="WelcomeUserTitleLabel" Content="Hi Unknown user !" Foreground="White" HorizontalAlignment="Center" FontSize="28"/>
                <Label x:Name="WelcomeUserTextLabel" Content="What would you like to play today ?" Foreground="White" HorizontalAlignment="Center" FontSize="18"/>
            </StackPanel>
            <Label x:Name="SelectedGameLabel" Content="Selected games" Foreground="White" FontSize="20" Margin="40, 0, 40, 0"/>
            <WrapPanel x:Name="SelectedGameWrapPanel" Margin="20, 0, 20, 0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
