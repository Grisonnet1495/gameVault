<Window x:Class="gameVaultProject.AuthenticateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthenticateUser"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Grid>
        <!-- ===== IMAGE DE FOND ANIMABLE ===== -->
        <Image x:Name="BackgroundImage"
               Source="/Ressources/Images/clear_login.png"
               Stretch="Fill"
               Opacity="1"
               Panel.ZIndex="-1"/>

        <!-- ===== CONTENEUR AVEC ANGLES ARRONDIS ===== -->
        <Border CornerRadius="12">
            <Border CornerRadius="10" BorderThickness="2">
                <!-- ===== GRILLE PRINCIPALE ===== -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- === BARRE SUPÉRIEURE === -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="LOGIN"
                                   Foreground="White"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="10,0,10,0"
                                   Grid.Column="0"
                                   FontFamily="{StaticResource GameFontPhrase}"/>

                        <Button x:Name="btnMinimize"
                                Content="-"
                                Click="btnMinimize_Click"
                                Grid.Column="1"
                                Style="{StaticResource MinimizeButtonStyle}"
                                Background="#FF7B4FFF"
                                HorizontalAlignment="Center"
                                Width="25"/>

                        <Button x:Name="btnClose"
                                Content="X"
                                Click="btnClose_Click"
                                Grid.Column="2"
                                Style="{StaticResource CloseButtonStyle}"
                                HorizontalAlignment="Center"
                                Width="25"
                                Background="#FF0061FF"
                                Height="25"
                                FontSize="10"/>
                    </Grid>

                    <!-- === CONTENU LOGIN === -->
                    <StackPanel Grid.Row="1"
                                Width="220"
                                Orientation="Vertical"
                                Margin="0,35,0,0">

                        <TextBlock x:Name="Title" Text="GameVault"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Foreground="#FF0061FF"
                                   HorizontalAlignment="Center"
                                   FontFamily="{StaticResource GameFontTitle}"/>

                        <TextBlock x:Name="Text" Text="Votre collection, votre univers — organisez, explorez et jouez sans limites."
                                   FontSize="12"
                                   Foreground="White"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"
                                   FontFamily="{StaticResource GameFontPhrase}"/>

                        <TextBlock Text="Username"
                                   Margin="0,35,0,0"
                                   FontSize="12"
                                   Foreground="White"
                                   FontFamily="{StaticResource GameFontPhrase}"/>

                        <TextBox x:Name="txtUser"
                                 FontSize="13"
                                 Foreground="White"
                                 BorderThickness="0,0,0,2"
                                 CaretBrush="#FFD47E"
                                 Margin="0,5,0,0"
                                 Padding="20,0,0,0"
                                 Background="{StaticResource UserIconBackground}"/>

                        <TextBlock Text="Password"
                                   Margin="0,15,0,0"
                                   FontSize="12"
                                   Foreground="White"
                                   FontFamily="{StaticResource GameFontPhrase}"/>

                        <PasswordBox x:Name="txtPass"
                                     FontSize="13"
                                     Foreground="White"
                                     BorderThickness="0,0,0,2"
                                     CaretBrush="#FFD47E"
                                     Margin="0,5,0,0"
                                     Padding="20,0,0,0"
                                     Background="{StaticResource KeyIconBackground}"/>

                        <Button x:Name="btnLogin"
                                Content="LOG IN"
                                Click="btnLogin_Click"
                                Style="{StaticResource LoginButtonStyle}"
                                Margin="0,25,0,0"
                                FontFamily="{StaticResource GameFontPhrase}"/>

                        <Button x:Name="btnCreate"
                                Content="CREATE"
                                Click="btnCreate_Click"
                                Style="{StaticResource LoginButtonStyle}"
                                Margin="0,25,0,0"
                                FontFamily="{StaticResource GameFontPhrase}"/>

                        <ToggleButton x:Name="ThemeToggle"
                                      Content="Mode Sombre"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      Margin="10"
                                      Checked="ThemeToggle_Checked"
                                      Unchecked="ThemeToggle_Unchecked"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
