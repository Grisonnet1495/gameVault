<UserControl x:Class="gameVaultProject.GameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gameVaultProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <!-- Note : Remplacer par un StackPanel ? -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Game title and main buttons -->
            <Grid Grid.Row="0" Margin="10, 10, 10, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <Label Grid.Column="0" Content="Game title" FontSize="24" Foreground="White" Margin="20, 0, 0, 0" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="P" Width="60" Height="40" Margin="10, 0, 10, 0"/>
                <Button Grid.Column="2" Content="M" Width="40" Height="40"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Game icon -->
                <Border Grid.Column="0" Background="#163E64" CornerRadius="20" Margin="40, 20, 40, 20">
                    <Rectangle/>
                </Border>

                <!-- Game details -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0, 10, 0, 10">
                        <Label Content="Type :" FontSize="18" Foreground="White"/>
                        <Label Content="Unknown type" FontSize="14" Foreground="White"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0, 10, 0, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Solo" FontSize="14" Foreground="White"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" Width="20" Height="20"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Multiplayer" FontSize="14" Foreground="White"/>
                        <CheckBox Grid.Row="1" Grid.Column="1" Width="20" Height="20"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="Coop" FontSize="14" Foreground="White"/>
                        <CheckBox Grid.Row="2" Grid.Column="1" Width="20" Height="20"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="Compatible with controllers" FontSize="14" Foreground="White"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" Width="20" Height="20"/>
                    </Grid>

                    <WrapPanel Grid.Row="2" Margin="0, 10, 0, 10">
                        <Label Content="Compatible with :   Windows, MacOS, Linux" Foreground="White"/>
                    </WrapPanel>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
