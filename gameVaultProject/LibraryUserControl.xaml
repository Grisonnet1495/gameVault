<UserControl x:Class="gameVaultProject.LibraryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gameVaultProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10, 10, 10, 10">
            <TextBlock x:Name="TitlePinnedGamesTextBlock" Text="Pinned games" Foreground="White" FontSize="24"/>
            <WrapPanel x:Name="PinnedGamesWrapPanel">
                <TextBlock x:Name="InfoPinnedGamesTextBlock" Text="No pinned games" Foreground="White" FontSize="24"/>
            </WrapPanel>
            <TextBlock x:Name="TitleAllGamesTextBlock" Text="All games" Foreground="White" FontSize="24"/>
            <WrapPanel x:Name="AllGamesWrapPanel">
                <TextBlock x:Name="InfoAllGamesTextBlock" Text="All games" Foreground="White" FontSize="24"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
