<UserControl x:Class="gameVaultProject.FavoritesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gameVaultProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock x:Name="TitleFavoritesGamesTextBlock" Text="Favorites games" Foreground="White" FontSize="24" Margin="40, 40, 40, 20"/>
            <WrapPanel x:Name="FavoritesGamesWrapPanel" Margin="20, 20, 20, 20"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
