
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="GameFontTitle">
        pack://application:,,,/Ressources/font/Press_Start_2P/PressStart2P-Regular.ttf#Press Start 2P
    </FontFamily>

    <FontFamily x:Key="GameFontPhrase">
        pack://application:,,,/Ressources/font/Audiowide/Audiowide-Regular.ttf#Audiowide
    </FontFamily>

    <!-- ==== Style du bouton Minimiser ==== -->
    <Style x:Key="MinimizeButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#61C1F2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4CAFE9"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ==== Style du bouton Fermer ==== -->
    <Style x:Key="CloseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#FF5C8A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E54D7F"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ==== Style du bouton de Connexion ==== -->
    <Style x:Key="LoginButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#7B4FFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4CAFE9"/>
            </Trigger>
        </Style.Triggers>
    </Style>
        
  
    <!-- ==== Icônes dans les TextBox (en arrière-plan) ==== -->
    <ImageBrush x:Key="UserIconBackground"
                Stretch="None" AlignmentX="Left"/>
    <ImageBrush x:Key="KeyIconBackground"
                Stretch="None" AlignmentX="Left"/>

</ResourceDictionary>
