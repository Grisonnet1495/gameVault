<Window x:Class="gameVaultProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gameVaultProject"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="800"
        Height="450"
        MinWidth="700"
        MinHeight="450"
        Background="#262626"
        WindowStyle="None">

    <Grid>
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Ellipse Grid.Row="0" Grid.Column="0" Width="20" Height="20" Fill="#0F9ED5"/>

            <Label Grid.Row="0" Grid.Column="1" Content=" gameVault" Foreground="White" FontSize="20" VerticalAlignment="Center"/>

            <!-- Title bar -->
            <Grid x:Name="TitleBarGrid" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="–" Click="MinimizeButton_Click" Style="{StaticResource TitleButtonStyle}"/>
                <Button Grid.Column="2" Content="▢" Click="MaximizeButton_Click" Style="{StaticResource TitleButtonStyle}"/>
                <Button Grid.Column="3" Content="✕" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}"/>
            </Grid>

            <!-- Menu -->
            <Grid x:Name="MenuGrid" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="1" Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Ressources/Icons/homeIcon.svg" Width="20" Height="20" Margin="5"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="2" Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Ressources/Icons/homeIcon.svg" Width="20" Height="20" Margin="5"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="3" Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Ressources/Icons/homeIcon.svg" Width="20" Height="20" Margin="5"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Content -->
            <Border Grid.Row="1" Grid.Column="1" Background="#1D1D1D" CornerRadius="20, 0, 0, 0" BorderBrush="#404040" BorderThickness="1, 1, 0, 0">
                <StackPanel x:Name="LibraryStackPanel" Background="Transparent">
                    <WrapPanel x:Name="PinnedGamesWrapPanel">

                    </WrapPanel>

                    <WrapPanel x:Name="AllGamesWrapPanel">

                    </WrapPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Margin="10, 0, 10, 0" MaxWidth="200">
                    <Label Content="Total hours played" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
                <StackPanel Grid.Row="1">
                    <Viewbox Margin="40, 0, 40, 0" MaxWidth="100">
                        <Label Content="0 hours" Padding="0, -10, 0, -10" Foreground="#BFBFBF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Viewbox>
                    <Viewbox Margin="40, 0, 40, 0" MaxWidth="90">
                        <Label Content="0 minutes" Padding="0, -10, 0, -10" Foreground="#BFBFBF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Viewbox>
                    <Viewbox Margin="40, 0, 40, 0" MaxWidth="90">
                        <Label Content="0 seconds" Padding="0, -10, 0, -10" Foreground="#BFBFBF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Viewbox>
                </StackPanel>
                <Viewbox Grid.Row="2" Margin="40, 0, 40, 0" MaxWidth="100">
                    <Label Content="Best game" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
                <Viewbox Grid.Row="3" Margin="40, 0, 40, 0" MaxWidth="100">
                    <Button>
                        
                    </Button>
                </Viewbox>
                <StackPanel Grid.Row="4">
                    <Viewbox Margin="60, 0, 60, 0" MaxWidth="100">
                        <Label Content="0 hours" Padding="0" Foreground="#BFBFBF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Viewbox>
                    <Viewbox Margin="20, 0, 20, 0" MaxWidth="130">
                        <Label Content="0 times this week" Padding="0" Foreground="#BFBFBF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Viewbox>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
